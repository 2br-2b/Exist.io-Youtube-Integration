{
    "manifest_version": 3,
    "name": "Exist.io Youtube",
    "version": "0.3",
    "description": "Log time spent watching videos on YouTube to Exist.io",
    "permissions": [
        "storage",
        "identity",
        "tabs"
    ],
    "host_permissions": [
        "https://exist.io/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "options.html",
        "default_title": "Exist.io YouTube Logger"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/watch*"
            ],
            "js": [
                "content-script.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["injected.js"],
            "matches": ["*://*.youtube.com/*"]
        }
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "@youtube-exist-logger",
            "strict_min_version": "42.0"
        }
    }
}
